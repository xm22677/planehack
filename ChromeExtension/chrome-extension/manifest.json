{
  "manifest_version": 3,
  "name": "Flight Delay Predictor",
  "version": "1.0.0",
  "description": "Predicts flight delays on Google Flights",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://www.google.com/travel/flights/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.google.com/travel/flights/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
